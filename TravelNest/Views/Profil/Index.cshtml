<!DOCTYPE html>
@model Profil
<html>
    <head>
        <link rel="stylesheet" href="~/css/Profil.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
</head>
    <body>
        <i id="menuBtn" class="fa-solid fa-bars"></i>
        <div class="sideMenu">
            <i id="xBtn" class="fa-solid fa-x"></i>
            <img id="logoMenu" src="~/images/logoMenu.png" />
            <div id="butonMeniu">
                <a asp-controller="Profil" asp-action="Index">
                    <i class="fa-solid fa-circle-user"></i>
                    <p>Profil</p>
                </a>
            </div>
            <div id="butonMeniu">
                <i class="fas fa-home"></i>
                <p>For You</p>
            </div>
            <div id="butonMeniu">
                <i class="fa-solid fa-users-between-lines"></i>
                <p>New Travel Group</p>
            </div>
            <div id="butonMeniu">
                <i class="fa-solid fa-plane"></i>
                <p>Search Destination</p>
            </div>
            <div id="butonMeniu">
                <i class="fa-solid fa-hotel"></i>
                <p>Find Accommodation</p>
            </div>
             <div id="butonMeniu">
                <i class="fas fa-map"></i>
                <p>Travel Map</p>
            </div>
            <div class="butoaneJos">
                <a asp-controller="Settings" asp-action="Index"><div id="butonMeniu">
                <i class="fa-solid fa-gear"></i>
                    <p>Settings</p>
                </div></a>
                <div id="butonMeniu" class="logoutBtn">
                    <i class="fas fa-sign-out-alt"></i>
                    <p>Logout</p>
                </div>
            </div>
        </div>
        <div id="PaginaProfil">
            <div id="sectiuneSus">
                <img id="imgProf" src="@Model.ImagineProfil" />
                <div id="stats">
                    <h5>@Model.User.UserName</h5>
                    <div id="dateFllw">
                        <p>@Model.Posts.Count() posts </p>
                        <p>0 followers</p>
                        <p>0 following</p>
                    </div>
                    <p id="bio">@Model.Bio</p>
                </div>
            </div>
            <div id="butoanePaginiProfil">
                <button id="PostsProfil">Posts</button>
                <button id="TravelGrProfil">Travel Groups</button>
                <button id="MentionedProfil">Tagged</button>
                @if (Model.Posts.Count() != 0)
                {
                    <button id="addPost2">New Post</button>
                }

            </div>
            <hr />
            <div id="paginaPostari">
                @if (Model.Posts.Count() == 0)
                    {
                        <img src="~/images/nophoto.png" />
                        <br />
                        <button id="addPost">New Post</button>
                    }
            else
            {
                <div id="rezultatPostari">

                    @foreach (var postare in Model.Posts.OrderByDescending(p => p.DataCr))
                    {
                        var primaImagine = postare.FisiereMedia
                        .Where(f => f.fisier == Tip.Image)
                        .FirstOrDefault();
                        var primulVideo = postare.FisiereMedia
                        .Where(f => f.fisier == Tip.Video)
                        .FirstOrDefault();

                        <div class="card-postare">
                            @if (primaImagine != null)
                            {
                                <img src="@primaImagine.Url" class="media-postare" />
                            }
                            else if (primulVideo != null)
                            {
                                <video class="media-postare" muted>
                                    <source src="@primulVideo.Url" type="video/mp4" />
                                </video>
                                <i class="fa-solid fa-play" style="position:absolute; top:10px; right:10px; color:white; text-shadow: 0 0 5px black;"></i>
                            }
                        </div>
                    }
                </div>
            }
                <div id="newPostForm">
                    <i id="xBtnFormPost" class="fa-solid fa-x"></i>
                <form method="post" enctype="multipart/form-data" asp-controller="Profil" asp-action="AddPostare" class="modern-upload-form">

                    <div class="upload-container">
                        <div id="addPhotos" class="left-column">
                            <input type="hidden" name="profilId" value="@Model.Id" />
                            <input name="FisiereMedia" type="file" id="addMedia" accept="image/*,video/*" multiple />

                            <label id="labelAddPoze" for="addMedia" class="drop-zone">
                                <div class="drop-zone-content">
                                    <i class="fa-solid fa-camera" id="AddPozePostareForm"></i>
                                    <h3>Drag and Drop</h3>
                                    <p>Click or Drag to Upload</p>
                                </div>
                            </label>

                            <div id="caruselSelectie" style="display: none">
                                <div class="carousel-wrapper" id="carouselWrapper">
                                </div>
                                <div id="butoaneCarusel">
                                    <button id="prevBtn" type="button" class="nav-btn prev">&#10094;</button>
                                    <button id="nextBtn" type="button" class="nav-btn next">&#10095;</button>
                                    <div id="counter">0 / 0</div>
                                    <i id="xBtnFormPostCarusel" class="fa-solid fa-x"></i>
                                </div>
                            </div>
                        </div>

                        <div id="descrierePoze" class="right-column">

                            <div class="input-group">
                                <label id="addLocatie" for="inputLocatie">Location</label>
                                <input id="inputLocatie" name="locatie" type="text" maxlength="255" placeholder="Add location" />
                                <div id="listaLocatii" class="dropdown-locatii"></div>
                                <div id="miniHarta" style="height: 180px; width: 100%; display: none; margin-top: 10px; border-radius: 8px; z-index: 1;"></div>
                            </div>

                            <div class="input-group">
                                <label id="addDescriere" for="descriere">Description</label>
                                <textarea name="descriere" placeholder="Write a caption..."></textarea>
                            </div>

                            <div class="input-group tag-section">
                                <label id="tagUseri" for="inputTag">Tag Users</label>

                                <div class="tag-input-wrapper">
                                    <i class="fa-solid fa-at tag-icon"></i>
                                    <input id="inputTag" type="text" placeholder="Search for users..." autocomplete="off" />

                                    <input type="hidden" id="finalTagList" name="tagUseri" value="" />
                                </div>

                                <div id="rezultateTag" class="tag-dropdown"></div>

                                <div id="selectedTagsContainer" style="margin-top:5px; display:flex; flex-wrap:wrap; gap:5px;"></div>

                                <div id="loadingFaces" style="display:none; color: #666; font-size: 0.9em; margin-top:10px;">
                                    <i class="fa-solid fa-spinner fa-spin"></i> Analyzing photo...
                                </div>

                                <div id="sugestiiAutomate" style="margin-top:10px;"></div>
                            </div>

                            <button id="PostFormPoze" type="submit">
                                Post <i class="fa-solid fa-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                </form>
                </div>
            </div>
        <div id="paginaTravelGr">
            <img src="~/images/notrGr.png" />
            <br />
            <button id="addPost">New Travel Group</button>
        </div>
        <script>
            window.onload=function(){
                document.getElementById("PostsProfil").style.borderBottom = "1px solid green";
                document.getElementById("paginaPostari").style.display="flex";
                document.getElementById("paginaTravelGr").style.display="none";
            };
              document.getElementById("PostsProfil").addEventListener("click", () => {
              document.getElementById("PostsProfil").style.borderBottom = "1px solid green";
              document.getElementById("TravelGrProfil").style.borderBottom = "none";
              document.getElementById("MentionedProfil").style.borderBottom = "none";
              document.getElementById("paginaPostari").style.display="flex";
              document.getElementById("paginaTravelGr").style.display="none";
            });
              document.getElementById("TravelGrProfil").addEventListener("click", () => {
              document.getElementById("TravelGrProfil").style.borderBottom = "1px solid green";
              document.getElementById("PostsProfil").style.borderBottom = "none";
              document.getElementById("MentionedProfil").style.borderBottom = "none";
              document.getElementById("paginaPostari").style.display="none";
              document.getElementById("paginaTravelGr").style.display="flex";
            });
              document.getElementById("MentionedProfil").addEventListener("click", () => {
              document.getElementById("MentionedProfil").style.borderBottom = "1px solid green";
              document.getElementById("PostsProfil").style.borderBottom = "none";
              document.getElementById("TravelGrProfil").style.borderBottom = "none";
              document.getElementById("paginaPostari").style.display="none";
              document.getElementById("paginaTravelGr").style.display="none";
            });
        </script>
        </div>
    </body>
<script src="~/js/profil.js" asp-append-version="true"></script>
<script src="~/js/tagSearch.js" asp-append-version="true"></script>
<script src="~/js/map.js" asp-append-version="true"></script>
</html>